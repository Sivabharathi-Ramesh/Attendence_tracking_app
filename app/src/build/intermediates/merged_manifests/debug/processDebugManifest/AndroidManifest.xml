<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.attendancesystem"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="36" />
    <!-- Permission is required for any network activity, like Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.example.attendancesystem.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.attendancesystem.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.AttendanceSystem" >
        <activity
            android:name="com.example.attendancesystem.SubjectAttendanceViewActivity"
            android:exported="false" />
        <activity
            android:name="com.example.attendancesystem.StudentReportViewActivity"
            android:exported="false" /> <!-- Core Flow Activities (Splash must launch first) -->
        <activity
            android:name="com.example.attendancesystem.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Core User Flow Activities -->
        <activity
            android:name="com.example.attendancesystem.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.attendancesystem.AdminDashboardActivity"
            android:exported="false" />
        <activity
            android:name="com.example.attendancesystem.TeacherDashboardActivity"
            android:exported="false" />
        <activity
            android:name="com.example.attendancesystem.StudentDashboardActivity"
            android:exported="false" /> <!-- Teacher Flow Activities -->
        <activity
            android:name="com.example.attendancesystem.SubjectDashboardActivity"
            android:exported="false" />
        <activity
            android:name="com.example.attendancesystem.TakeAttendanceRosterActivity"
            android:exported="false" />
        <activity
            android:name="com.example.attendancesystem.ViewPastAttendanceActivity"
            android:exported="false" /> <!-- Admin Management Activities -->
        <activity
            android:name="com.example.attendancesystem.UserManagementActivity"
            android:exported="false" />
        <activity
            android:name="com.example.attendancesystem.AcademicManagementActivity"
            android:exported="false" />
        <activity
            android:name="com.example.attendancesystem.AttendanceReportsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.attendancesystem.AddUserActivity"
            android:exported="false" />
        <activity
            android:name="com.example.attendancesystem.AddSubjectActivity"
            android:exported="false" /> <!-- Admin/Student Detail Activities -->
        <activity
            android:name="com.example.attendancesystem.StudentSubjectDetailActivity"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.attendancesystem.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>