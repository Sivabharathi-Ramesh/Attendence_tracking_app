<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@android:color/white">

    <!-- Row Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <!-- S.No, Roll No, Student Name -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <!-- S.No. and Roll No. in one line -->
            <TextView
                android:id="@+id/textViewSerialAndRollNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#555555"
                tools:text="1. (24820001)" />

            <!-- Student Name -->
            <TextView
                android:id="@+id/textViewStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:text="Aravindh" />
        </LinearLayout>

        <!-- Attendance Options (Radio Group) -->
        <RadioGroup
            android:id="@+id/radioGroupAttendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:orientation="horizontal">

            <!-- Option 1: Present (P) -->
            <RadioButton
                android:id="@+id/radioPresent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="P"
                android:textSize="12sp"
                android:gravity="center"
                tools:checked="true" />

            <!-- Option 2: Absent Informed (AI) -->
            <RadioButton
                android:id="@+id/radioAbsentInformed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AI"
                android:textSize="12sp"
                android:gravity="center" />

            <!-- Option 3: Absent Uninformed (AU) -->
            <RadioButton
                android:id="@+id/radioAbsentUninformed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AU"
                android:textSize="12sp"
                android:gravity="center" />
        </RadioGroup>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#DDDDDD" />

</LinearLayout>
