<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permission is required for any network activity, like Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AttendanceSystem"
        tools:targetApi="31">
        <activity
            android:name=".SubjectAttendanceViewActivity"
            android:exported="false" />
        <activity
            android:name=".StudentReportViewActivity"
            android:exported="false" /> <!-- Core Flow Activities (Splash must launch first) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Core User Flow Activities -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".TeacherDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".StudentDashboardActivity"
            android:exported="false" /> <!-- Teacher Flow Activities -->
        <activity
            android:name=".SubjectDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".TakeAttendanceRosterActivity"
            android:exported="false" />
        <activity
            android:name=".ViewPastAttendanceActivity"
            android:exported="false" /> <!-- Admin Management Activities -->
        <activity
            android:name=".UserManagementActivity"
            android:exported="false" />
        <activity
            android:name=".AcademicManagementActivity"
            android:exported="false" />
        <activity
            android:name=".AttendanceReportsActivity"
            android:exported="false" />
        <activity
            android:name=".AddUserActivity"
            android:exported="false" />
        <activity
            android:name=".AddSubjectActivity"
            android:exported="false" /> <!-- Admin/Student Detail Activities -->
        <activity
            android:name=".StudentSubjectDetailActivity"
            android:exported="false" />
    </application>

</manifest>