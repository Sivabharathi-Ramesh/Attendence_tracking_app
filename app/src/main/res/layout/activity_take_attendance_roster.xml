<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_background"
    tools:context=".TakeAttendanceRosterActivity">

    <!-- App Bar / Toolbar (Orange Header) -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Header Controls (Date Selector & Subject Name) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white"
            android:elevation="2dp">

            <!-- Subject Name Display -->
            <TextView
                android:id="@+id/textViewSubjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textColor="@color/dark_navy_blue"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Subject: Database Systems (Theory)" />

            <!-- Date Selector Button -->
            <Button
                android:id="@+id/buttonSelectDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25 - 10 - 2025"
                android:textColor="@color/dark_navy_blue"
                android:backgroundTint="@color/light_gray_background"
                app:strokeColor="@color/medium_text"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                android:minHeight="48dp"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Column Headers (Matching Web App Table Structure) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_gray_background"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <!-- S.No / Roll No / Name Header -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Student Info"
                android:paddingStart="16dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_text" />

            <!-- Attendance Status Header (Present/Absent Informed/Absent Uninformed) -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="P"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_text" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="AI"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_text" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="AU"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_text" />

        </LinearLayout>

        <!-- Attendance Roster List (Scrollable) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRoster"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            tools:listitem="@layout/item_attendance_roster" />

        <!-- Bottom Save Button -->
        <Button
            android:id="@+id/buttonSaveAttendance"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Save Attendance"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/colorSecondary"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"
            android:layout_gravity="bottom"
            android:elevation="4dp" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
